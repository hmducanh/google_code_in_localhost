.my_name {
	display: flex;
	flex-direction: row-reverse;
	width: 200px;
	height: 80px;
	margin-right: 80px; 
	margin-top: 110px;
}

.container > h3 {
	font-size: x-large;
}

.container > ol > li, ul > li, p {
	font-size: x-large;
}

#title {
	color : red;
	font-size: xx-large;
}

.Head {
	 padding-top: 0px;
    background: #3d84e6;
