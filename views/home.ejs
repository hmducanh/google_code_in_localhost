.content {
	background-image: url(https://scontent.fhan5-1.fna.fbcdn.net/v/t1.15752-9/51268286_1969688953337915_9093002410573430784_n.png?_nc_cat=109&_nc_sid=ae9488&_nc_ohc=g0UDCSZ8kwAAX-qHzz8&_nc_oc=AQm4EZNWBOCIZd2Le54DOdocj3aQfz_kS1zvYKOirhUnwbzhwN4iU2dsy1JTeX0Qkgg&_nc_ht=scontent.fhan5-1.fna&oh=69bafef745dde904eee40b62ba53afdf&oe=5FAA217A);
	margin-bottom: 20px;
	display: block;
	margin-bottom: 60px;
}

#intro {
	color : orangered;
	font-style: oblique;
	font-weight: bold;
    font-family: 'Oswald', sans-serif;
    font-size: 30px;
    display: block;
    margin-left: 80px;
    margin-top: 80px;
}

#info {
	font-size: 26px;
    font-weight: 300;
    line-height: 1.4;
    display: block;
    margin-left: 80px;
